{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*",
    "tests/**/*",
    "vitest.config.ts",
    "playwright.config.ts"
  ]
}
