{
  "name": "jlj2-authentication",
  "version": "0.1.0",
  "description": "Authentication service (OIDC, user management)",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "check": "pnpm fix && pnpm build && pnpm test",
    "fix": "biome check --write .",
    "lint": "biome check .",
    "dev": "tsx watch src/app.ts",
    "start": "node ./src/app.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:integration": "playwright test",
    "test:all": "pnpm test && pnpm test:integration",
    "type-check": "tsc --noEmit",
    "migrate": "tsx src/database/migrations/cli.ts",
    "db:version": "tsx src/database/check-version.ts"
  },
  "keywords": [
    "Auth",
    "user",
    "openid-connect"
  ],
  "author": "Jared Jardine <jared@jljsquared.com>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@vitest/coverage-v8": "^4.0.16",
    "@flydotio/dockerfile": "0.7.10",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@vitest/ui": "^4.0.16",
    "playwright": "^1.57.0",
    "tsx": "^4.21.0",
    "typescript": "5.8.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "cassandra-driver": "^4.7.0",
    "dotenv": "17.2.0",
    "hono": "^4.11.3",
    "nanoid": "^5.0.0"
  }
}
